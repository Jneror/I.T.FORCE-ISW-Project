#:kivy 1.10.1
<Form>:
    id: form
    BoxLayout:
        orientation: 'vertical'
        size_hint: None,None
        size: 400,500
        anchor_x: 'left'
        Label:
            text: 'Strike'
            font_size: 18
        TextInput:
            id: strike
            font_size: 18
            multiline: False
            
        Label:
            text: 'Tiempo de Maduracion'
            font_size: 18
        TextInput:
            id: timeMadurity
            font_size: 18
            multiline: False

        Label:
            text: 'Numero de simulaciones'
            font_size: 18
        TextInput:
            id: numSim
            font_size: 18
            multiline: False

        Label:
            text: 'Ratio libre de riesgo'
            font_size: 18
        TextInput:
            id: riskFreeRate
            font_size: 18
            multiline: False

        Label:
            text: 'Empresa'
            font_size: 18
        TextInput:
            id: company
            font_size: 18
            multiline: False

        Label:
            text: 'Fuente'
            font_size: 18
        
        BoxLayout:   
            TextInput:
                size_hint: .8,1
                id: source
                font_size: 18
                multiline: False
            Button:
                size_hint: .2,1
                font_size: 18
                text: 'Buscar'
        
        Button:
            font_size: 18
            text: 'Calcular'
            on_press: form.sim(strike.text,timeMadurity.text,numSim.text,riskFreeRate.text,company.text,source.text)
    BoxLayout:
        anchor_x: 'right'
        size_hint: None,None
        size: 400,500
        FileChooserListView:
                id: filechooser
                on_selection: source.text = filechooser.selection